<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Edit</title>
</head>
<body>
  <div id=menu>
    <a href="/">HOME</a> | <a href="add">ADD</a>
  </div>
  <br>
  <br>
  <br>
  <form action="/edit/<%= data.id %>" method="post">
    <table>
      <tr>
        <td>ID</td>
        <td><input type="text" name="id" value="<%= data.id %>" readonly></td>
      </tr>

      <tr>
        <td>String</td>
        <td><input type="text" name="string" value="<%= data.string %>"></td>
      </tr>

      <tr>
        <td>Integer</td>
        <td><input type="number" name="integer" value="<%= data.integer %>"></td>
      </tr>

      <tr>
        <td>Float</td>
        <td><input type="number" name="float" value="<%= data.float %>"></td>
      </tr>

      <tr>
        <td>Date</td>
        <td><input type="date" name="date" value="<%= data.date %>" type="date"></td>
      </tr>

      <tr>
        <td>Boolean</td>
        <td><select name="boolean">
          <option value="True">True</option>
          <option value="False">False</option>
        </select>
      </td>
    </tr>
    <tr>
      <td colspan="3"><input type="submit" value="SAVE"></input></td>
    </tr>
  </table>
</form>
</body>
</html>
